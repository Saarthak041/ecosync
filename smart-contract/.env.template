# Ethereum Testnet Configuration Template
# Copy this to .env and fill in your values

# 1. Infura API Key (FREE) - https://infura.io/
INFURA_PROJECT_ID=your_infura_project_id_here

# 2. Etherscan API Key (FREE) - https://etherscan.io/apis  
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# 3. Your wallet private key (for deployment)
PRIVATE_KEY=your_wallet_private_key_here

# 4. Network configuration
DEPLOY_NETWORK=sepolia

# RPC URLs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Contract addresses (fill after deployment)
SEPOLIA_CONTRACT_ADDRESS=
GOERLI_CONTRACT_ADDRESS=

# Frontend configuration
REACT_APP_CONTRACT_ADDRESS=
REACT_APP_NETWORK_ID=11155111
REACT_APP_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
