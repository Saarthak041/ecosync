{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "customConditions": ["development", "browser"]
  },
  "include": [
    "./test",
    "./scripts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "extends": "expo/tsconfig.base"
}

